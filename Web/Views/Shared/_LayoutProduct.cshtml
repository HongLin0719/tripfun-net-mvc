
@{
    ViewData["Title"] = "_LayoutProduct";
}
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>去趣chicTrip | 旅遊商城</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <!-- Element Plus -->
    <link rel="stylesheet" href="https://unpkg.com/element-plus/dist/index.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700&display=swap" rel="stylesheet" />

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/Product/styles.css" />



</head>
<body>
    <div id="app">
        <header>
            <!-- navbar.css -->
            <!-- 導覽列 -->
            <div class="container header-topbar d-flex align-items-center justify-content-between">
                <!-- 左邊 LOGO -->
                <a href="#" aria-label="去趣chicTrip | 旅遊商城">
                    <img src="~/image/FunTrip_logo.png"
                         alt="Logo"
                         width="107"
                         height="50" />
                </a>
                <!-- 搜尋欄 (桌面版) -->
                <el-input v-model="searchQuery"
                          class="desktop-search mx-auto"
                          placeholder="輸入目的地、景點、體驗行程或活動名稱...">
                    <template #prefix>
                        <el-icon class="header-search-icon">
                            <search />
                        </el-icon>
                    </template>
                </el-input>
                <!-- 右邊按鈕區塊 -->
                <div class="d-flex">
                    <a href="#" class="el-button header-login-text">旅遊規劃必備APP</a>
                    <a href="#" class="el-button header-login-text">登入/註冊</a>
                    <!-- 992px以下顯示 -->
                    <a href="#" class="el-button header-login-icon">
                        <el-icon>
                            <User />
                        </el-icon>
                    </a>
                    <a href="#" class="el-button">
                        <el-icon>
                            <shopping-cart />
                        </el-icon>
                    </a>
                </div>
            </div>

            <!-- 手機版搜尋欄 -->
            <div class="container">
                <div class="mobile-search w-100">
                    <el-input v-model="searchQuery"
                              placeholder="輸入目的地、景點、體驗行程或活動名稱...">
                        <template #prefix>
                            <el-icon class="header-search-icon">
                                <search />
                            </el-icon>
                        </template>
                    </el-input>
                </div>
            </div>

            <!-- header-category.css -->
            <!-- 分類列表 -->
            <section class="container pc-top-category-menu">
                <div class="category-swiper swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide"
                             v-for="(item, index) in categories"
                             :key="index">
                            <a href="#" class="category-link"> {{ item }} </a>
                        </div>
                    </div>

                    <div class="swiper-button-next category-swiper-next"></div>
                    <div class="swiper-button-prev category-swiper-prev"></div>
                </div>
            </section>
        </header>

        @RenderBody()

        <footer class="footer">
            <div class="container">
                <div class="footer-container">
                    <!-- 左側 50% 區塊，內部分為兩欄 -->
                    <div class="footer-left">
                        <!-- 第一欄：關於和泰相關 -->
                        <div class="footer-column">
                            <h4>關於和泰相關</h4>
                            <ul>
                                <li><a href="#">和泰Points介紹</a></li>
                                <li><a href="#">和泰集團會員</a></li>
                                <li><a href="#">和泰集團會員隱私權政策</a></li>
                                <li><a href="#">和泰集團常見問題</a></li>
                                <li><a href="#">和泰集團會員條款</a></li>
                            </ul>
                        </div>
                        <!-- 第二欄：關於去趣 -->
                        <div class="footer-column">
                            <h4>關於去趣</h4>
                            <ul>
                                <li><a href="#">FAQ專區</a></li>
                                <li><a href="#">客服專區</a></li>
                                <li><a href="#">隱私權政策</a></li>
                                <li><a href="#">免責聲明</a></li>
                                <li><a href="#">防詐騙提醒</a></li>
                                <li><a href="#">和泰集團相關服務</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- 右側 50% 區塊：旅行社資訊 -->
                    <div class="footer-right">
                        <h4>和漾旅行社股份有限公司</h4>
                        <p>旅遊商品由 和漾旅行社股份有限公司 提供</p>
                        <p>
